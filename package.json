{
  "name": "@kurocado-studio/qa",
  "version": "0.0.0-semantically-released",
  "description": "",
  "homepage": "https://github.com/kurocado-studio/qa",
  "bugs": {
    "url": "https://github.com/kurocado-studio/qa/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kurocado-studio/qa.git"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsup --dts && copyfiles -u 1 src/tsconfig/*.json dist",
    "commitlint": "pnpm exec commitlint --edit .git/COMMIT_EDITMSG",
    "eslint": "eslint --max-warnings=0 .",
    "eslint-check": "eslint --max-warnings=0 .",
    "eslint-fix": "eslint --max-warnings=0 . --fix",
    "lint": "eslint --max-warnings=0 .",
    "prepare": "husky install",
    "prettier-check": "prettier --check . ",
    "prettier-fix": "prettier --check . --write",
    "semantic-release": "semantic-release",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "*": [
      "pnpm run prettier-fix"
    ],
    "**/*.{ts,tsx}": [
      "pnpm run eslint-fix",
      "pnpm run lint"
    ]
  },
  "files": [
    "dist",
    "node_modules/@testing-library/jest-dom",
    "node_modules/@vitest/coverage-v8"
  ],
  "peerDependencies": {
    "@eslint/js": "^9.19.0",
    "@faker-js/faker": "^9.6.0",
    "@remix-run/node": "^2.15.3",
    "@remix-run/testing": "^2.15.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jest-axe": "^3.5.9",
    "@types/lodash-es": "^4.17.12",
    "@types/mdx": "^2.0.13",
    "@types/node": "22.14.1",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.0.5",
    "c8": "^10.1.3",
    "dotenv": "^16.4.7",
    "fast-text-encoding": "^1.0.6",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "lodash-es": "^4.17.21",
    "supertest": "^7.0.0",
    "typescript": "^5.7.3",
    "unplugin-swc": "^1.5.1",
    "util": "^0.12.5",
    "vite-plugin-checker": "^0.8.0",
    "vite-plugin-dts": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5",
    "vitest-axe": "^0.1.0"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@kurocado-studio/styleguide": "2.5.2",
    "@types/react": "19.1.2",
    "commitlint": "19.8.0",
    "copyfiles": "2.4.1",
    "eslint": "9.26.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "prettier": "3.5.3",
    "react": "^19.1.0",
    "semantic-release": "^23.1.1",
    "tsup": "^8.3.6"
  },
  "overrides": {
    "conventional-changelog-conventionalcommits": ">= 8.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./node": "./dist/node/index.js",
    "./node/setup": "./dist/node/setup.node.js",
    "./node/tsconfig.qa": "./dist/node/tsconfig.qa.json",
    "./npm": "./dist/npm/index.js",
    "./npm/setup": "./dist/npm/setup.npm.js",
    "./npm/tsconfig.qa": "./dist/npm/tsconfig.qa.json",
    "./web": "./dist/web/index.js",
    "./web/setup": "./dist/web/setup.web.js",
    "./web/tsconfig.qa": "./dist/web/tsconfig.qa.json"
  }
}
